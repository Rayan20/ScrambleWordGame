    function scrambl() {
        document.getElementById("scram").innerHTML = "<font size=\"5\"<br><br><strong>Constants to be flipped: " + constants + "<br>Vowels to be flipped: " + vowels + "<br></font>";
    }
    function refreshPage(){
        window.location.reload();
    }
    function timer(){
        alert('Times Up!');
    }
    function startTimer(){
        var counter = 30;
        setInterval(function(){
            counter--;
            if(counter > 0){
                span = document.getElementById("count");
                span.innerHTML = counter;
            }
            if (counter == 0){
                alert('Times Up!');
                clearInterval(counter);
            }
        },1000);
    }
    $("#startclock").click(function(){
        startTimer();
    });

</script>
